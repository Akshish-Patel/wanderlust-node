<% if(success && success.length) { %>

    <div class="row">
        <div class="alert alert-success alert-dismissible fade show col-md-6 mt-3" role="alert" style="margin: auto;">
            <%= success%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <% } %>




        <% if(error && error.length) { %>

            <div class="row">
                <div class="alert alert-danger alert-dismissible fade show col-md-6 mt-3" role="alert"
                    style="margin: auto;">
                    <%= error%>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>

            <% } %>