<%- include("../views/layout/boilerplate.ejs") %>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            position: sticky;   
            top: 90px;
            background-color: white;
            z-index: 1;
        }

        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 1.5rem;
            margin-left: 0.5rem;
            opacity: 0.5;
        }

        .filter:hover{
            opacity: 1;
        }

        #tax-info{
            display: none;
        }

        .tax-toogle{
            border: 1px solid black;
            border-radius: 20px;
            padding: 1rem;
            height: 3.5rem;
            position: absolute;
            right: 0;
            margin: 1rem;
            /* font-weight: 500; */
            align-items: center;
            justify-content: center;
            /* width: 100px; */
        }
    </style>
    <body>
        <%- include("../views/includs/navbar.ejs")%>
        
                <!-- <h3 class="home-title">All Listings</h3> -->
                <div id="filters">
                    <div class="filter">
                        <div><i class="fa-solid fa-fire"></i></div>
                        <p>Trending</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-bed"></i></div>
                        <p>Rooms</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-mountain-city"></i></div>
                        <p>Iconic Cities</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-mountain-sun"></i></div>
                        <p>Mountains</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-brands fa-fort-awesome"></i></div>
                        <p>Castles</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-person-swimming"></i></div>
                        <p>Amazing Pools</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-campground"></i></div>
                        <p>Camping</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-cow"></i></div>
                        <p>Farms</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-snowflake"></i></div>
                        <p>Arctic</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-igloo"></i></div>
                        <p>Domes</p>
                    </div>

                    <div class="filter">
                        <div><i class="fa-solid fa-sailboat"></i></div>
                        <p>Boats</p>
                    </div>

                        <div class="tax-toogle">
                            <div class="form-check-reverse form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes  </label>
                            </div>
                        </div>
                </div>

                <%- include("../views/includs/flash.ejs")%>

                <div class="row mt-4">
                    <% for(listing of listings){ %>
                        <div class="col">
                            <a href="/listing/<%=listing._id%>">
                                <div class="card listing-card" style="width: 20rem;">
                                    <img class="card-img-top" src="<%= listing.url%>" alt="listing_image">
                                    <div class="card-body">
                                        <ul class="list-group">
                                            <b class="title">
                                                <li>
                                                    <%= listing.title%>
                                                </li>
                                            </b>
                                            <li>&#8377;<%= listing.price.toLocaleString("en-IN") %> / night  <i class="tax-info" id="tax-info">&nbsp; +18% GST</i>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </a>
                </div>
                <% }%>
            </div>

            <script>

                let taxSwitch = document.getElementById("flexSwitchCheckDefault")
                taxSwitch.addEventListener("click", ()=>{
                    console.log("click");
                    let taxInfo = document.getElementsByClassName("tax-info");

                    for(info of taxInfo){
                        if(info.style.display != "inline"){
                            info.style.display = "inline"
                        }else{
                            info.style.display = "none"
                        }
                    }
                })

            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
            <%- include("../views/includs/footer.ejs") %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </html>